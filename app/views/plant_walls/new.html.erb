<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= swot_gravatar_for @user %>
        <%= @user.name %>
        <br><br>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3> <%= 'New a plantWall' %> </h3>
    <div class="center lead">
      <%= form_for [@user,@plantwall] do |f| %>
        <%= f.label :"PlantWall name" %>
        <%= f.text_field :name, :class => "input-xxsmall"%>
        <%= f.label :"PlantWall location" %>
        <%= f.text_field :location, :class => "input-xxsmall"%>


        <%= f.submit "Submit", :class => "btn btn-primary" %>
      <% end %>
    </div> 
  </div>
</div>
